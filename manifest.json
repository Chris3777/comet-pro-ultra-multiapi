{
  "manifest_version": 3,
  "name": "Chris Agent",
  "description": "Universal AI assistant supporting unlimited API keys from OpenAI, Grok, Gemini and Anthropic",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
